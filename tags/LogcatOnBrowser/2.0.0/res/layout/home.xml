<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:gravity="center"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:orientation="vertical"
		android:gravity="left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView
			android:text="@string/websocket"
			android:textAppearance="@android:style/TextAppearance.Small"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/websocket_ipaddress_textview"
			android:text="xxx.xxx.xxx.xxx"
			android:textAppearance="@android:style/TextAppearance.Medium"
			android:layout_marginBottom="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		<TextView
			android:text="@string/socket"
			android:textAppearance="@android:style/TextAppearance.Small"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/socket_ipaddress_textview"
			android:text="xxx.xxx.xxx.xxx"
			android:textAppearance="@android:style/TextAppearance.Medium"
			android:layout_marginBottom="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<Button
				android:id="@+id/start_server_button"
				android:text="@string/start_server"
				android:layout_margin="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<Button
				android:id="@+id/stop_server_button"
				android:text="@string/stop_server"
				android:layout_margin="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
